<div class="content-wrapper">
    <div class="content container">
        <div class="actions">
          <h2>Log in</h2>
        </div>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
            <%= f.label :email %><br/>
            <%= f.email_field :email, autofocus: true, class: 'form-control', required: true %>
        </div>

        <div class="form-group">
            <%= f.label :password %><br/>
            <%= f.password_field :password, autocomplete: "off", class: 'form-control', required: true, Error: source does not appear to be markup. %>
        </div>

        <% if devise_mapping.rememberable? -%>
        <div class="actions">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
        </div>
        <% end -%>

        <div class="actions">
            <%= f.submit "Log in", class: 'btn rounded shadowed-text red-bg' %>
        </div>
        <% end %>

        <div class="actions">
          <%= render "devise/shared/links" %>
        </div>

    </div>
</div>
