<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div>
      <label for="task">Task</label>
    </div>
    <div>
      <%= f.text_field :name, required: true, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div>
      <label for="priority">Priority</label>
    </div>
    <div>
      <%= f.range_field :priority, min: 0, max: 100, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div>
      <label for="due">Due</label>
    </div>
    <div>
      <%= f.date_field :due, required: true, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div>
      <label for="description">Description</label>
    </div>
    <div>
      <textarea rows="4" cols="20" id="description"></textarea>
    </div>
  </div>

  <div class="actions">
    <%= f.submit class: 'btn rounded shadowed-text red-bg' %>
  </div>
<% end %>
