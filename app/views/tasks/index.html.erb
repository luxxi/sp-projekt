<div class="content-wrapper">
  <div class="content container">
    <div class="tags">
      <ul>
        <li><a href="#all" class="tags__tag tag tag__active">All</a></li>
        <li><a href="#work" class="tags__tag tag">Work</a></li>
        <li><a href="#school" class="tags__tag tag">School</a></li>
      </ul>
    </div>
    <div class="tasks">
      <table>
        <tr>
          <th></th>
          <th>task</th>
          <th>priority</th>
          <th>tags</th>
          <th>due</th>
          <th></th>
        </tr>
        <% @tasks.each do |task| %>
          <tr>
            <td>
              <%= check_box_tag 'done', task.id, task.done, class: 'tasks__checkbox', data: { id: task.id } %>
              <label for="checkbox1" class="tasks__checkbox__label"></label>
            </td>
            <td class="tasks__name"><%= task.name %></td>
            <td>
              <%= '<i class="fa fa-exclamation"></i>'.html_safe if task.is_priority? %>
            </td>
            <td class="hide">
              <a href="#work" class="tag">Work</a>
              <a href="#school" class="tag">School</a>
            </td>
            <td><i class="fa fa-clock-o"></i> <%= task.due.strftime("%d %b") %></td>
            <td><%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_task_path(task) %></td>
          </tr>
        <% end %>
      </table>
    </div>
    <div class="actions">
      <%= link_to 'New task', new_task_path, class: 'btn rounded shadowed-text white red-bg' %>
    </div>
  </div>
</div>
